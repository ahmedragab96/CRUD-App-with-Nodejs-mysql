<% include partials/header.ejs %>
    <div class="table-wrapper">
        <%  if (trips.length > 0) { %>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% trips.forEach((trip, index) => { %>
                        <tr>
                            <th scope="row"><%= trip.id %></th>
                            <td><img src="/assets/img/<%= trip.image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= trip.name %></td>
                            <td><%= trip.location %></td>
                            <td><%= trip.rating %></td>
                            <td>
                                <a href="/edit/<%= trip.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= trip.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No Trips found. Go <a href="/add" >here</a> to add trips.</p>
        <% } %>
    </div>
</div>
<% include partials/footer.ejs %>
</body>
</html>
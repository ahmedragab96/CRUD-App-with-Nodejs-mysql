<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (trip) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="first-name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= trip.name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Location</label>
                    <input type="text" class="form-control" name="location" id="location" value="<%= trip.location %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="username">Rating</label>
                    <input type="text" class="form-control" name="rating" id="rating" value="<%= trip.rating %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Trip</button>
        </form>
    <% } else { %>
        <p class="text-center">Trips Not Found. Go <a href="/add">here</a> to add trips.</p>
    <% } %>
</div>
</div>
</body>
</html>